<div role='banner' class="header_psychic">
    {{#if @blog.logo}}<a class="logo_psychic" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
    <h1 class="blogtitle_psychic">
        <a title="{{@blog.title}}" href='{{@blog.url}}'>
            {{{@blog.title}}}
        </a>
    </h1>
    <p class="blogdescription_psychic">
        <a title="{{@blog.title}}" href='{{@blog.url}}'>
            {{@blog.description}}
        </a>
    </p>
</div>